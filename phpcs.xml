<?xml version="1.0"?>
<ruleset name="Project Coding Standards">
    <description>Custom ruleset for this project</description>
    
    <!-- Use WordPress coding standards -->
    <rule ref="WordPress"/>
    
    <!-- Scan these files/directories -->
    <file>.</file>
    
    <!-- Exclude vendor and other directories -->
    <exclude-pattern>/vendor/</exclude-pattern>
    <exclude-pattern>/node_modules/</exclude-pattern>
    <exclude-pattern>/tests/</exclude-pattern>
    
    <!-- Show progress and colors -->
    <arg value="ps"/>
    <arg name="colors"/>
    
    <!-- Check PHP files only -->
    <arg name="extensions" value="php"/>
</ruleset>