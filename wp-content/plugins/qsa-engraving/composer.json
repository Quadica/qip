{
    "name": "quadica/qsa-engraving",
    "description": "Generates SVG files for UV laser engraving of Quadica Standard Array (QSA) LED modules.",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Quadica Developments",
            "email": "dev@quadica.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "tecnickcom/tc-lib-barcode": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Quadica\\QSA_Engraving\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Quadica\\QSA_Engraving\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
